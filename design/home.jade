html
	head
		link(rel="stylesheet" href="/css/home.css")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.3.3/vue.min.js")
	body
		include popup.jade
		.home__inline
			#calendar__month
				.month__change.month__change--prev(@click="months.prev()")
				| {{UTILS.MONTHS[currentMonth]}} {{currentYear}}
				.month__change.month__change--next(@click="months.next()")
				#calendar__wrap
					#calendar__dayWrap
						.calendar__dayLabel(v-for="day in UTILS.DAYS") {{day}}
					.calendar__day(v-for="day in days" v-bind:class="{'calendar__day--disabled': !day.enabled}")
						button(v-show="day.enabled").calendar__add ADD +
						.calendar__date {{day.number||''}}
		footer#footer
		script(src="/js/constants.js")
		script(src="/js/truth.js")
		script(src="/js/home.js")
		script(src="/js/timeline.js")


