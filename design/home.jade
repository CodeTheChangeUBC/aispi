html
  head
    link(rel="stylesheet" href="./home.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.3.3/vue.min.js")
  body
    .home__inline
      #header
        img#header__image(src="./logo.png" height="60px")
      #calendar__month
        .month__change.month__change--prev
        |May 2017
        .month__change.month__change--next
      #calendar__wrap
        #calendar__dayWrap
          each day in ["SUN", "MON", "TUE", "WED", "THU", "FRI", "SAT"]
            .calendar__dayLabel=day
        .calendar__day(v-for="day in days" v-bind:class="{'calendar__day--disabled': !day.current}") 
          .calendar__date {{day.number}}
          .calendar__add(v-show="day.current") ADD
    script(src="./home.js")